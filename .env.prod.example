# Directus Production Environment Configuration
# Copy this to .env.prod and update with your actual values

# Directus Configuration
KEY=your-production-directus-key-32-chars-here
SECRET=your-production-directus-secret-64-chars-here

# Admin User for Directus (Production)
ADMIN_EMAIL=admin@grile.ro
ADMIN_PASSWORD=your-very-secure-production-password

# Database Configuration (Cloud Supabase Production)
DB_CLIENT=pg
DB_HOST=aws-0-eu-central-1.pooler.supabase.com
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres.your-prod-project-ref
DB_PASSWORD=your-production-database-password

# Public URL for Production
PUBLIC_URL=https://content.grile.ro

# AWS S3 Storage (Supabase Production)
STORAGE_S3_DRIVER=s3
STORAGE_S3_KEY=your-production-s3-access-key
STORAGE_S3_SECRET=your-production-s3-secret-key
STORAGE_S3_BUCKET=https://your-prod-ref.supabase.co/storage/v1/s3
STORAGE_S3_REGION=eu-central-1

# Extensions
EXTENSIONS_PATH=./extensions
EXTENSIONS_AUTO_RELOAD=false

# Production Settings
LOG_LEVEL=warn
CACHE_ENABLED=true

# Email Configuration
EMAIL_FROM=no-reply@grile.ro
EMAIL_TRANSPORT=smtp
EMAIL_SMTP_HOST=mail.grile.ro
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=noreply@grile.ro
EMAIL_SMTP_PASSWORD=your-production-email-password

# Security
CORS_ENABLED=true
CORS_ORIGIN=https://grile.ro

# Rate Limiting
RATE_LIMITER_ENABLED=true

# Authentication
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
REFRESH_TOKEN_COOKIE_SECURE=true
REFRESH_TOKEN_COOKIE_SAME_SITE=strict

# File Upload
MAX_PAYLOAD_SIZE=1gb

# GraphQL
GRAPHQL_SCHEMA_CACHE=true