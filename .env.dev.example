# Directus Development Environment Configuration
# Copy this to .env.dev and update with your actual values

# Directus Configuration
KEY=your-directus-key-32-chars-here
SECRET=your-directus-secret-64-chars-here

# Admin User for Directus
ADMIN_EMAIL=admin@grile.ro
ADMIN_PASSWORD=your-secure-dev-password

# Database Configuration (Cloud Supabase Dev)
DB_CLIENT=pg
DB_HOST=aws-0-eu-central-1.pooler.supabase.com
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres.sbpqgoclsbmysycejelx
DB_PASSWORD=your-dev-database-password

# Public URL for Development
PUBLIC_URL=https://dev.content.grile.ro

# AWS S3 Storage (Supabase Dev)
STORAGE_S3_DRIVER=s3
STORAGE_S3_KEY=your-dev-s3-access-key
STORAGE_S3_SECRET=your-dev-s3-secret-key
STORAGE_S3_BUCKET=https://sbpqgoclsbmysycejelx.supabase.co/storage/v1/s3
STORAGE_S3_REGION=eu-central-1

# Extensions
EXTENSIONS_PATH=./extensions
EXTENSIONS_AUTO_RELOAD=false

# Development Settings
LOG_LEVEL=info
CACHE_ENABLED=true

# Email Configuration
EMAIL_FROM=no-reply@grile.ro
EMAIL_TRANSPORT=smtp
EMAIL_SMTP_HOST=mail.grile.ro
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=noreply@grile.ro
EMAIL_SMTP_PASSWORD=your-email-password

# Security
CORS_ENABLED=true
CORS_ORIGIN=https://grile.ro,https://dev.grile.ro

# Rate Limiting
RATE_LIMITER_ENABLED=true

# Authentication
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
REFRESH_TOKEN_COOKIE_SECURE=true
REFRESH_TOKEN_COOKIE_SAME_SITE=strict

# File Upload
MAX_PAYLOAD_SIZE=1gb

# GraphQL
GRAPHQL_SCHEMA_CACHE=true